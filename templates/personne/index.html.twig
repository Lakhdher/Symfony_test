{% extends 'template.html.twig' %}

{% block title %}
  <h1>
    List
  </h1>
{% endblock %}

{% block body %}
<div class="row">
{% for personne in personnes %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">{{personne.Name}}</h5>
          <p class="card-text">{{personne.Firstname}} {{personne.Name}}</p>
          <p class="card-text">{{personne.age}}</p>
          <a href="{{ path("Personne.GetById",{id:personne.id})}}" class="btn btn-primary">detail</a>
          <a href="{{ path("Personne.Delete",{id:personne.id})}}" class="btn btn-primary">delete</a>
          <a href="{{ path("Personne.Edit",{id:personne.id})}}" class="btn btn-primary">edit</a>
        </div>
      </div>    
    
{% endfor %}
</div>
{% if isPaginated is defined and isPaginated %}
<div class="row mt-3">

  <nav aria-label="Page navigation example">
    <ul class="pagination">
      {% if page != 1 %}
        <li class="page-item"><a class="page-link" href="{{ path ("Personne.List.Paginated",{page : page -1  , nbre : nbre})}}">Previous</a></li>
      {% endif %}
      {% for i in range(1,nbrePages) %}
        <li class="page-item"><a class="page-link" href="{{ path ("Personne.List.Paginated",{page : i , nbre : nbre})}}">{{i}}</a></li>
      {% endfor %}
      {% if page != nbrePages %}
         <li class="page-item"><a class="page-link" href="{{ path ("Personne.List.Paginated",{page : page +1  , nbre : nbre})}}">Next</a></li>
      {% endif %}
    </ul>
  </nav>
  {% endif %}

</div>

    
{% endblock %}
